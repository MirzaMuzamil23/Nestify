<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">Sign up</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation" >
            
            <div class="mb-3">
                <label for="username"  class="form-label"></label>
                <input type="text"  id = "username" name="username" class="form-control" placeholder="Your Name" required > 
                <div class="valid-feedback">
                    Looks good!
                </div>   
            </div>
            <div class="mb-3">
                <label for="email"  class="form-label"></label>
                <input type="text"  id = "email" name="email" class="form-control" placeholder="Your Email" required > 
                <div class="valid-feedback">
                    Looks good!
                </div>   
            </div>
            <div class="mb-3">
                <label for="passward"  class="form-label"></label>
                <input type="password"  id = "password" name="password" placeholder="Password" class="form-control" required > 
                <div class="valid-feedback">
                    Looks good!
                </div>   
            </div>
            <div class="d-grid gap-2">
                <button class="btn signup-btn mb-4 mt-3">signup</button>
            </div>
            
            <p class="text-center text-muted">Have already an account? <a href="http://localhost:8080/login"
                class="fw-bold text-body"><u>Login here</u></a></p>
        </form>
    </div>
</div>